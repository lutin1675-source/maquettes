---
import Layout from '../layouts/Layout.astro';
import SiteChrome from '../components/SiteChrome.astro';

const base = import.meta.env.BASE_URL || '/';
const heroVisual = 'https://images.unsplash.com/photo-1476610182048-b716b8518aae?auto=format&fit=crop&w=1200&q=80';
const heroAside = {
	title: 'Programme atelier',
	description:
		'Nous documentons chaque fiche à partir de montages réels et de sources constructeur. Dis-moi ce dont tu as besoin (kit, technique, outillage) et je priorise la rédaction.',
	points: ['Brief sur mesure', 'Validation des sources', 'Suivi des retours clubs'],
	cta: { label: 'Écrire', href: 'mailto:bonjour@toton-maquette.com' },
};
const atelierHighlights = [
	{
		title: 'Journal de progression',
		description:
			'Entrées datées pour raconter chaque phase (choix du kit, montage, peinture, finitions) avec photos avant/après et leçons retenues.',
		link: 'atelier/journal-de-progression/',
		meta: 'Narration structurée',
	},
	{
		title: 'Techniques & Pas-à-pas',
		description:
			'Guides pédagogiques prêts à imprimer : matériel requis, étapes imagées, astuces et erreurs courantes sur une technique donnée.',
		link: 'atelier/techniques-pas-a-pas/',
		meta: 'Tutoriels détaillés',
	},
	{
		title: 'Chroniques',
		description:
			'Textes courts sur les frustrations, victoires et coulisses de l’atelier, toujours reliés à un apprentissage concret.',
		link: 'atelier/chroniques/',
		meta: 'Regards personnels',
	},
	{
		title: 'Histoires & Contexte',
		description:
			'Dossiers historiques pour comprendre l’origine d’un modèle, ses variantes et les détails visibles à reproduire.',
		link: 'atelier/histoires-contexte/',
		meta: 'Culture maquette',
	},
];
const latestTests = [
	{
		title: 'Revell Boeing 737-800 1/144',
		type: 'Test de kit',
		summary: 'Analyse des grappes, ajustements karman/voilure et difficulté moyenne pour un premier liner.',
		link: 'banc-dessai/tests-kits/',
		tags: ['Moulage propre', 'Note : moyen', 'Recommandé intermédiaire'],
	},
	{
		title: 'Tamiya Extra Thin vs colle bi-composant',
		type: 'Comparatif colles',
		summary: 'Temps de prise, résistance à la ponceuse et budget pour montage régulier.',
		link: 'banc-dessai/comparatifs/',
		tags: ['Collage précis', 'Profil débutant', 'Tableau synthétique'],
	},
	{
		title: 'Aérographe double action entrée de gamme',
		type: 'Test outil',
		summary: 'Prise en main, entretien, compatibilité acrylique vs enamel et qualité du jet.',
		link: 'banc-dessai/tests-outils-materiel/',
		tags: ['Rendement', 'Comparé à H&S Ultra', 'Note : facile'],
	},
];
const progressTimeline = [
	{ phase: 'Phase 01 — Choix du kit', detail: 'Motivations, contraintes et objectifs consignés dans le journal.' },
	{ phase: 'Phase 02 — Montage', detail: 'Liste des ajustements nécessaires et solutions testées.' },
	{ phase: 'Phase 03 — Peinture', detail: 'Séquences couleur, masquage et références FS/RAL vérifiées.' },
	{ phase: 'Phase 04 — Finitions', detail: 'Patine, vernis, présentation finale et retour d’expérience.' },
];
const spotlight = {
	title: 'Pas-à-pas : Blanc gloss sans traces',
	copy:
		'Processus en 6 étapes pour réussir un blanc brillant sans peau d’orange : apprêt gris, pré-ombrage léger, couches fines à l’aéro puis polissage.',
	link: 'atelier/techniques-pas-a-pas/',
	action: 'Lire le pas-à-pas',
	stats: ['Niveau : intermédiaire', 'Temps : 2h30 hors séchage', 'Matériel : apprêt gris + acrylique GNZ'],
};
---

<Layout title="Toton Maquette" description="Catalogue documenté de maquettes statiques.">
	<SiteChrome className="space-y-12">
		<section class="grid gap-6 lg:grid-cols-[minmax(0,1.8fr)_minmax(0,1fr)]">
			<article class="tm-panel tm-hero-panel rounded-xl p-8">
				<p class="section-label text-[var(--tm-lagoon)]">Observatoire Toton</p>
				<h1 class="mt-4 text-4xl leading-tight lg:text-5xl">
					Hub L’Atelier + Banc d’essai pour maquettistes exigeants
				</h1>
				<p class="mt-6 text-base text-[var(--tm-muted)]">
					Un espace unique pour progresser et choisir le bon matériel. L’Atelier regroupe journaux, pas-à-pas et chroniques tandis que le Banc d’essai
					analyse kits, outils et comparatifs. Toutes les données sont vérifiées (constructeurs, IPMS, clubs) avant publication.
				</p>
				<div class="mt-8 flex flex-wrap items-center gap-4 text-[0.7rem] font-semibold uppercase tracking-[0.35em] text-[var(--tm-muted)]">
					<a class="inline-flex items-center gap-2 rounded-full bg-[var(--tm-lagoon)] px-8 py-3 text-slate-950 shadow-[0_10px_22px_rgba(43,217,197,0.3)]" href={`${base}atelier/`}>
						Découvrir L’Atelier
					</a>
					<a class="inline-flex items-center gap-2 rounded-full border border-white/30 px-6 py-3 text-xs text-[var(--tm-muted)] hover:text-[var(--tm-lumen)]" href={`${base}banc-dessai/`}>
						Le Banc d’essai
					</a>
				</div>
			</article>

			<aside class="tm-panel flex flex-col justify-between rounded-xl p-7">
				<div>
					<p class="brand-pill text-[var(--tm-lumen)]/70">{heroAside.title}</p>
					<p class="mt-4 text-[var(--tm-muted)]">{heroAside.description}</p>
					<ul class="mt-4 space-y-2 text-sm text-[var(--tm-muted)]">
						{heroAside.points.map((point) => (
							<li>• {point}</li>
						))}
					</ul>
				</div>
				<div>
					<figure class="mt-6 overflow-hidden rounded-lg border border-white/10">
						<img src={heroVisual} alt="Visuel moodboard atelier" loading="lazy" />
						<figcaption class="bg-black/60 px-4 py-2 text-xs uppercase tracking-[0.4em]">Moodboard atelier</figcaption>
					</figure>
					<a
						class="mt-6 inline-flex w-full items-center justify-center rounded-full border border-white/40 px-6 py-3 text-xs font-semibold uppercase tracking-[0.4em]"
						href={heroAside.cta.href}
					>
						{heroAside.cta.label}
					</a>
				</div>
			</aside>
		</section>

		<section class="space-y-6">
			<div>
				<p class="section-label text-[var(--tm-lagoon)]">L’Atelier</p>
				<h2 class="text-3xl leading-tight">Découvrir l’espace pédagogique</h2>
				<p class="text-[var(--tm-muted)]">Journal, tutoriels, chroniques et dossiers historiques réunis en un même hub.</p>
			</div>
			<div class="card-grid">
				{atelierHighlights.map((highlight) => (
					<article class="tm-panel flex flex-col rounded-xl p-6">
						<p class="text-xs font-semibold uppercase tracking-[0.35em] text-[var(--tm-muted)]">{highlight.meta}</p>
						<h3 class="mt-2 text-2xl">{highlight.title}</h3>
						<p class="mt-3 text-[var(--tm-muted)]">{highlight.description}</p>
						<a class="mt-6 inline-flex items-center justify-between rounded-full border border-white/10 px-4 py-2 text-xs uppercase tracking-[0.35em] text-[var(--tm-muted)] hover:text-[var(--tm-lumen)]" href={`${base}${highlight.link}`}>
							<span>Ouvrir</span>
							<span class="text-[var(--tm-lagoon)]">→</span>
						</a>
					</article>
				))}
			</div>
		</section>

		<section class="space-y-6">
			<div class="flex flex-wrap items-end justify-between gap-4">
				<div>
					<p class="section-label">Le Banc d’essai</p>
					<h2 class="text-3xl leading-tight">Derniers tests</h2>
					<p class="text-[var(--tm-muted)]">Kits, outils et comparatifs passés au crible.</p>
				</div>
				<a class="inline-flex items-center gap-2 rounded-full border border-white/30 px-5 py-2 text-xs uppercase tracking-[0.35em] text-[var(--tm-muted)] hover:text-[var(--tm-lumen)]" href={`${base}banc-dessai/`}>
					Accéder à tous les tests
				</a>
			</div>
			<div class="card-grid">
				{latestTests.map((test) => (
					<article class="tm-panel flex flex-col rounded-xl p-6">
						<p class="text-xs font-semibold uppercase tracking-[0.3em] text-[var(--tm-muted)]">{test.type}</p>
						<h3 class="mt-2 text-2xl">{test.title}</h3>
						<p class="mt-3 text-[var(--tm-muted)]">{test.summary}</p>
						<ul class="mt-4 space-y-1 text-sm text-[var(--tm-muted)]">
							{test.tags.map((tag) => (
								<li>• {tag}</li>
							))}
						</ul>
						<a class="mt-6 inline-flex items-center justify-between rounded-full border border-white/10 px-4 py-2 text-xs uppercase tracking-[0.35em] text-[var(--tm-muted)] hover:text-[var(--tm-lumen)]" href={`${base}${test.link}`}>
							<span>Lire</span>
							<span class="text-[var(--tm-lagoon)]">→</span>
						</a>
					</article>
				))}
			</div>
		</section>

		<section class="grid gap-6 lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)]">
			<div class="tm-panel rounded-xl p-8">
				<p class="section-label">Suivre ma progression</p>
				<h2 class="mt-3 text-3xl">Journal structuré étape par étape</h2>
				<p class="mt-4 text-[var(--tm-muted)]">
					Chaque phase est documentée pour comprendre les blocages et capitaliser sur les solutions. Les entrées renvoient vers les tutoriels ou
					tests liés pour approfondir.
				</p>
				<ul class="mt-6 space-y-3 text-[var(--tm-muted)]">
					{progressTimeline.map((item) => (
						<li>
							<strong>{item.phase}</strong> — {item.detail}
						</li>
					))}
				</ul>
				<a class="mt-6 inline-flex rounded-full bg-[var(--tm-coral)] px-6 py-3 text-xs font-semibold uppercase tracking-[0.4em] text-slate-950 shadow-[0_10px_22px_rgba(255,143,101,0.3)]" href={`${base}atelier/journal-de-progression/`}>
					Consulter le journal
				</a>
			</div>
			<div class="rounded-xl border border-white/10 bg-[radial-gradient(circle_at_top,#31216b,#120d26)] p-8">
				<p class="section-label">À la une</p>
				<h2 class="mt-3 text-3xl">{spotlight.title}</h2>
				<p class="mt-4 text-[var(--tm-muted)]">{spotlight.copy}</p>
				<ul class="mt-4 space-y-1 text-sm text-[var(--tm-muted)]">
					{spotlight.stats.map((stat) => (
						<li>• {stat}</li>
					))}
				</ul>
				<a class="mt-6 inline-flex rounded-full border border-white/30 px-6 py-3 text-xs font-semibold uppercase tracking-[0.4em] text-[var(--tm-muted)] hover:text-[var(--tm-lumen)]" href={`${base}${spotlight.link}`}>
					{spotlight.action}
				</a>
			</div>
		</section>

	</SiteChrome>
</Layout>
