---
const { className: customClass = '' } = Astro.props;
const base = import.meta.env.BASE_URL || '/';
const year = new Date().getFullYear();
---

<header class="site-header">
	<div class="container">
		<a class="brand logo" href={base}>
			<span class="icon">✈︎</span>
			<span class="logo-text">
				<span class="logo-title">Tonton Marquette</span>
				<span class="slogan">Notre passion</span>
			</span>
		</a>
		<nav class="main-nav">
			<a href={`${base}atelier-technique/`}>Atelier Technique</a>
			<a href={`${base}dossiers-hangar/`}>Dossiers Hangar</a>
			<a href={`${base}revues-kits/`}>Revues & Kits</a>
			<a href={`${base}vie-de-club/`}>Vie de Club</a>
			<a href={`${base}ressources/`}>Ressources</a>
		</nav>
	</div>
</header>

<main class={`container ${customClass}`}>
	<slot />
</main>

<footer class="site-footer">
	<div class="container footer-grid">
		<div>
			<p>© {year} Tonton Marquette. Tous droits réservés.</p>
		</div>
		<div>
			<a href={`${base}cgu/`}>Conditions Générales d'Utilisation</a>
		</div>
		<div class="footer-contact">
			<p>
				Contact : <a href="mailto:bonjour@tonton-marquette.com">bonjour@tonton-marquette.com</a><br />
				N'hésitez pas à nous partager vos idées ou besoins documentaires, nous répondons rapidement.
			</p>
		</div>
	</div>
</footer>
