---
import { SITE, NAV_LINKS, FOOTER_LINKS } from '../lib/site';

const { className: customClass = '' } = Astro.props;
const base = import.meta.env.BASE_URL || '/';
const year = new Date().getFullYear();
---

	<div class="tm-shell flex min-h-screen flex-col">
		<header class="tm-header">
		<div class="tm-header-bar">
			<div class="container flex flex-wrap items-center justify-between gap-3 px-4 py-2 text-[0.65rem] uppercase tracking-[0.35em] text-[var(--tm-muted)] sm:text-xs">
				<p>{SITE.tagline}</p>
				<div class="flex flex-wrap items-center gap-3">
					<a class="font-semibold text-[var(--tm-lumen)] hover:text-[var(--tm-lagoon)]" href={`mailto:${SITE.email}`}>
						Contact {SITE.email}
					</a>
					<button
						type="button"
						data-theme-toggle
						class="rounded-full border border-white/30 px-3 py-1 text-[0.55rem] font-semibold uppercase tracking-[0.4em] text-[var(--tm-muted)] transition-colors hover:text-[var(--tm-lumen)]"
						aria-pressed="false"
					>
						Mode clair
					</button>
				</div>
			</div>
		</div>

		<div class="container flex flex-wrap items-center gap-6 px-4 py-6">
			<a class="flex items-center gap-5 text-[var(--tm-text)]" href={base}>
				<span class="text-4xl lg:text-5xl">✈︎</span>
				<div>
					<p class="font-serif text-3xl leading-tight lg:text-[2.3rem]">{SITE.title}</p>
					<p class="text-[0.65rem] font-semibold uppercase tracking-[0.55em] text-[var(--tm-muted)]">Maquettes statiques</p>
				</div>
			</a>
			<nav class="ml-auto hidden flex-wrap items-center gap-4 text-[0.65rem] font-semibold uppercase tracking-[0.3em] text-[var(--tm-muted)] lg:flex">
				{NAV_LINKS.map((link) => (
					<a class="transition-colors hover:text-[var(--tm-lumen)]" href={`${base}${link.href}`}>{link.label}</a>
				))}
			</nav>
		</div>

		<nav class="container flex flex-wrap gap-3 px-4 pb-4 text-[0.65rem] font-semibold uppercase tracking-[0.32em] text-[var(--tm-muted)] lg:hidden">
			{NAV_LINKS.map((link) => (
				<a class="text-[var(--tm-muted)]" href={`${base}${link.href}`}>{link.label}</a>
			))}
		</nav>
	</header>

	<main class={`container flex-1 px-4 py-10 ${customClass}`}>
		<slot />
	</main>

	<footer class="tm-footer border-t border-white/10">
		<div class="container grid gap-8 px-4 py-10 md:grid-cols-[2fr,3fr]">
			<div class="space-y-3">
				<p class="text-3xl font-serif text-[var(--tm-text)]">{SITE.title}</p>
				<p class="text-sm text-[var(--tm-muted)]">{SITE.description}</p>
				<div class="text-sm text-[var(--tm-muted)]">
					<p>© {year} {SITE.title}</p>
					<p>
						Contact : <a class="font-semibold text-[var(--tm-lagoon)]" href={`mailto:${SITE.email}`}>{SITE.email}</a>
					</p>
				</div>
			</div>
			<div class="grid gap-6 sm:grid-cols-3">
				{FOOTER_LINKS.map((group) => (
					<div>
						<p class="text-xs font-semibold uppercase tracking-[0.4em] text-[var(--tm-muted)]">{group.title}</p>
						<ul class="mt-3 space-y-2 text-sm text-[var(--tm-text)]/80">
							{group.items.map((item) => (
								<li>
									<a
										class="transition-colors hover:text-[var(--tm-lumen)]"
										href={item.href.startsWith('http') || item.href.startsWith('mailto') ? item.href : `${base}${item.href}`}
									>
										{item.label}
									</a>
								</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</div>
	</footer>
</div>

<script is:inline>
	const THEME_KEY = 'tm-theme';
	const toggleBtn = document.querySelector('[data-theme-toggle]');
	const root = document.documentElement;
	const labels = {
		dark: 'Mode clair',
		light: 'Mode sombre',
	};

	function applyTheme(theme) {
		root.setAttribute('data-theme', theme);
		try {
			localStorage.setItem(THEME_KEY, theme);
		} catch (err) {
			console.warn('Impossible de stocker le thème', err);
		}
		if (toggleBtn) {
			toggleBtn.textContent = labels[theme];
			toggleBtn.setAttribute('aria-pressed', theme === 'light' ? 'true' : 'false');
		}
	}

	if (toggleBtn) {
		const currentTheme = root.getAttribute('data-theme') || 'dark';
		applyTheme(currentTheme);
		toggleBtn.addEventListener('click', () => {
			const nextTheme = root.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
			applyTheme(nextTheme);
		});
	}
</script>
