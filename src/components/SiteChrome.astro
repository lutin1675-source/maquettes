---
const { className: customClass = '' } = Astro.props;
const base = import.meta.env.BASE_URL || '/';
---

<header class="site-header">
	<div class="container">
		<a class="brand" href={base}>Tonton Marquette</a>
		<nav>
			<a href={base}>Accueil</a>
			<a href="https://github.com/lutin1675-source/maquettes" rel="noreferrer">GitHub</a>
		</nav>
	</div>
</header>

<main class={`container ${customClass}`}>
	<slot />
</main>

<footer class="site-footer">
	<div class="container">
		<p>Documentation générée avec Astro · prête pour GitHub Pages</p>
	</div>
</footer>
